<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Follow_listActivity">
    <Button
        android:id="@+id/btn_bcak_follow_list"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/back"/>
    <TextView
        android:layout_below="@id/btn_bcak_follow_list"
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:text="Your Following list:"
    android:gravity="center"
        android:layout_marginLeft="20dp"
    android:textSize="18dp"
        android:id="@+id/tv_follo_list"/>

    <ListView
        android:layout_below="@id/tv_follo_list"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listview_follow"
        android:divider="#00000000"
        android:paddingTop="6dp"
        android:dividerHeight="33dp"/>

</RelativeLayout>