<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/btn_back_follow"
        android:background="@drawable/back"/>
    <TextView
        android:layout_marginTop="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/search_user"
        android:background="@drawable/ic_search"/>
    <EditText
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/search_user"
        android:id="@+id/et_username_follow"
        android:hint="Search..."
        android:maxLines="1"
        android:autofillHints=""
        android:inputType="text" />
    <Button
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_user"
        android:text="OK"
        android:layout_alignParentEnd="true"
        android:id="@+id/btn_ok"
        android:background="@drawable/btn2dong"
        android:layout_alignParentRight="true" />
    <Button
        android:layout_marginTop="50dp"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:background="@drawable/btn_signup_dong"
        android:layout_below="@id/btn_ok"
        android:id="@+id/btn_follow_follow"/>
    <TextView
        android:layout_marginTop="50dp"
        android:layout_marginStart="50dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text=""
        android:layout_below="@id/btn_ok"
        android:id="@+id/tv_follow"/>
    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/label_follow"
        android:layout_below="@id/btn_ok"
        android:text="Name:" />
    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/btn_view_list"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/follow_list"/>

</RelativeLayout>