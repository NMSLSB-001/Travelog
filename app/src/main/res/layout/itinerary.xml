<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewTrips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#35586C"
        android:paddingVertical="20dp"
        android:text="Trips"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp" />

    <GridLayout
        android:id="@+id/gridLayoutTripArticle"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:columnCount="3"
        android:orientation="horizontal"
        android:rowCount="1"
        app:layout_constraintTop_toBottomOf="@+id/textViewTrips">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="start|center"
            android:paddingHorizontal="62.5dp"
            android:text="Trip Plan"
            android:textAlignment="center"
            android:textSize="20sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_column="1"
            android:layout_gravity="center" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="end|center"
            android:paddingHorizontal="62.5dp"
            android:text="Articles"
            android:textAlignment="center"
            android:textSize="20sp" />



    </GridLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        app:layout_constraintTop_toBottomOf="@+id/gridLayoutTripArticle">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Title"
            android:textAlignment="center"
            android:layout_gravity="center"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:text="Content"
            android:textAlignment="center"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="+ Photo/Video"
            android:textSize="20dp"
            android:layout_marginVertical="12dp"
            android:layout_gravity="left|center" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/colorPrimaryDark" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="+ Location"
            android:textSize="20dp"
            android:layout_marginVertical="12dp"
            android:layout_gravity="left|center" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/colorPrimaryDark" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create"
            android:background="#35586C"
            android:layout_marginVertical="12dp"
            android:layout_gravity="center" />


    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>